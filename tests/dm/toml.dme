#include "common.dm"

var/test_toml = @{"
[database]
enabled = true
ports = [ 8000, 25565 ]
data = [ ["delta", "phi"] ]
temp_targets = { cpu = 79, case = 72 }
"}

var/test_json = @{"
{"database":{"data":[["delta","phi"]],"enabled":true,"ports":[8000,25565],"temp_targets":{"case":72,"cpu":79}}}
"}

/test/proc/check_toml_file2json()
    rustg_file_write(test_toml, "test.toml")

    var/toml_output = rustg_read_toml_file("test.toml")

    if (toml_output ~! json_decode(test_json))
        CRASH("test:\n[test_toml]\n \nexpected:\n[test_json]\n \nrustg:\n[json_encode(toml_output)]")

/test/proc/toml_encode()
    var/encode_result = rustg_toml_encode(json_decode(test_json))
    TEST_ASSERT_EQUAL(encode_result, test_toml)
